{
  "name": "autoforce",
  "homepage": "https://sebastianclaros.github.io/autoforce",
  "private": false,
  "version": "0.1.0",
  "description": "Developer Automation tool for Github / Gitlab and Salesforce projects.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sebastianclaros/autoforce"
  },
  "source": "src/auto.mjs",
  "main": "dist/autoforce.js",
  "module": "dist/autoforce.mjs",
  "exports": {
    "types": "./dist/autoforce.d.ts",
    "require": "./dist/autoforce.js",
    "default": "./dist/autoforce.modern.mjs"
  },
  "types": "dist/autoforce.d.ts",
  "scripts": {
    "build": "microbundle",
    "dev": "microbundle watch",
    "format": "prettier --write \"src/**/*.(js|ts)\"",
    "lint": "eslint src --ext .js,.ts",
    "lint:fix": "eslint src --fix --ext .js,.ts",
    "test": "jest --config jest.config.js",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "prettier": "prettier --write \"**/*.{css,html,js,json,ts,md,xml,yaml,yml}\"",
    "precommit": "lint-staged",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@docusaurus/core": "^3.0.1",
    "@docusaurus/preset-classic": "^3.0.1",
    "@docusaurus/theme-mermaid": "^3.0.1",
    "@types/jest": "29.4.0",
    "@typescript-eslint/eslint-plugin": "5.54.0",
    "@typescript-eslint/parser": "5.52.0",
    "docusaurus-plugin-drawio": "^0.4.0",
    "dotenv": "^16.4.5",
    "eslint": "^8.11.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.2",
    "graphql-request": "^7.1.0",
    "handlebars": "^4.7.8",
    "husky": "^7.0.4",
    "jest": "29.4.3",
    "jsforce": "^3.4.1",
    "lint-staged": "^12.3.7",
    "matter": "^0.2.0",
    "microbundle": "^0.15.1",
    "octokit": "^4.0.2",
    "openai": "^4.54.0",
    "prettier": "^2.6.0",
    "prompts": "^2.4.2",
    "ts-jest": "29.0.5",
    "ts-node": "^10.9.2",
    "typescript": "4.9.5"
  }
}
